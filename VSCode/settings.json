{
    "terminal.integrated.confirmOnExit": true,
    "terminal.integrated.experimentalRestore": true,
    "window.zoomLevel": 0,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.sql": true,
        "**/*.min.js": true,
        "**/*.bundle.js": true,
        "**/staticBuilds/*": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": true,
        "**/*.map": true
    },
    "editor.rulers": [
        80
    ],
    "editor.tabSize": 2,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.associations": {
        "*.cjsx.md": "coffee",
        "*.litcoffee": "coffee",
        "Vagrantfile": "ruby",
        "*.cssm": "css"
    },
    "python.linting.flake8Enabled": true,
    "javascript.validate.enable": false,
    "standard.options": {
      "parser": "babel-eslint"
    },
    "javascript.updateImportsOnFileMove.enabled": "never",
    "markdownlint.config": {
      "default": true,
      "no-inline-html": false
    }
  }
