{
    "terminal.integrated.confirmOnExit": true,
    "terminal.integrated.experimentalRestore": true,
    "terminal.integrated.shell.osx": "/bin/bash",
    "window.restoreWindows": "all",
    "window.zoomLevel": 0,
    "search.exclude": {
        "**/*.sql": true,
        // javascript
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.min.js": true,
        "**/*.bundle.js": true,
        "**/build/*": true,
        "**/staticBuilds/*": true,
        "**/dist/*": true,
        "**/.nyc_output/*": true,
        "**/coverage/*": true,
        "**/package-lock.json": true,
        "**/yarn.lock": true,
        "**/yarn-error.log": true,
        // python
        "**/.pytest_cache/*": true,
        "**/*.egg-info/*": true,
        "**/Pipfile.lock": true,
        "**/poetry.lock": true,
        "**/htmlcov/*": true,
        "**/coverage.xml": true,
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": true,
        "**/*.map": true
    },
    "editor.rulers": [
        80
    ],
    "editor.tabSize": 2,
    "breadcrumbs.enabled": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.associations": {
        "*.cjsx.md": "coffee",
        "*.litcoffee": "coffee",
        "Vagrantfile": "ruby",
        "*.cssm": "css",
        "*.gs": "javascript"
    },
    "python.linting.flake8Enabled": true,
    "javascript.validate.enable": false,
    "javascript.updateImportsOnFileMove.enabled": "never",
    "markdownlint.config": {
      "default": true,
      "no-inline-html": false
    }
  }
